@model Game.GUI.ViewModels.ListTableViewModel
@{
    Layout = null;
}

<table class="bordered centered">
    <thead>
        <tr>
            <th>Nadawca</th>
            <th>Temat</th>
            <th>Data wysłania</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model.tableList)
        {
            if (item.IfRead == false)
            {
                <tr id="newMessage" onclick="location.href='@Url.Action("Content", "Message", new { MessageID = @item.ID })'">
                    <td>@item.Sender_Login</td>
                    <td>@item.Theme</td>
                    <td>@item.PostDate</td>
                </tr>
            }
            else if (item.IfRead == true)
            {
                <tr style="font-weight: normal" onclick="location.href='@Url.Action("Content", "Message", new { MessageID = @item.ID })'">
                    <td>@item.Sender_Login</td>
                    <td>@item.Theme</td>
                    <td>@item.PostDate</td>
                </tr>
            }
        }
    </tbody>
</table>

