@model Game.GUI.ViewModels.Building.UserBuildings.UserBuildingsViewModel
@{
    Layout = null;
}

<div id="userBuilding">
    <ul class="collapsible" data-collapsible="accordion">
        @foreach (var item in Model.listModel)
        {
            <li>
                @if (item.ifCan == true)
                {
                    <button class="right btn tooltipped" data-position="right" data-delay="50" data-tooltip="Cena: @item.Percent_price_per_lvl Produkcja: @item.Percent_product_per_lvl"
                            id="lvlUp" onclick="location.href='@Url.Action("LvlUp", "UserBuilding", new { id = item.ID })'">
                        <i class="fa fa-arrow-up"></i> Level UP
                    </button>
                }
                <div class="collapsible-header">
                    @item.Building_Name

                    @if (item.Status != "gotowy")
                {
                        <div class="progress">
                            <div class="indeterminate"></div>
                        </div>
                    }
                </div>
                <div class="collapsible-body">
                    <p>
                        Lvl: @item.Lvl<br />
                        Produkcja(s): @item.Produkcja<br />
                        Status: @item.Status<br />
                        <button class='dropdown-button btn' style='background: repeating-linear-gradient(
                135deg,
                #fff,
                #fff 10px,
                #@item.Color 10px,
                #@item.Color 20px)' data-activates='dropdown1'>
                            Wybierz kolor
                        </button>

                        <ul id='dropdown1' class='dropdown-content'>
                            <li><a class="buildingColor" data-bid="@item.ID" data-bcolor="ff0000" style="background-color: #ff0000">1.</a></li>
                            <li><a class="buildingColor" data-bid="@item.ID" data-bcolor="edff00" style="background-color: #edff00">2.</a></li>
                            <li><a class="buildingColor" data-bid="@item.ID" data-bcolor="51ff00" style="background-color: #51ff00">3.</a></li>
                        </ul>


                    </p>
                </div>
            </li>
        }
    </ul>
</div>


<script src="~/Scripts/jquery-2.1.4.min.js"></script>
<script src="~/Scripts/js/jquery.slimscroll.min.js"></script>
<script>
    $(document).ready(function () {
        $('.collapsible').collapsible({
            accordion: false // A setting that changes the collapsible behavior to expandable instead of the default accordion style
        });
    });
    $('#userBuilding').slimScroll({
        size: '10px',
        height: '350px',
        alwaysVisible: true
    });

    $(".buildingColor").click(function () {
        var bcolor = $(this).data('bcolor');
        var bid = $(this).data('bid');
        $.ajax({
            type: "POST",
            url: 'UserBuilding/ChangeColor',
            contentType: "application/json; charset=utf-8",
            data: JSON.stringify({ color: bcolor, id: bid }),
            success: function (data) {
                location.reload();
            }
        });
    });

</script>