@model Game.GUI.ViewModels.Map.MapViewModel
@{
    Layout = null;
}

<div id="mapAdd" class="modal">
    <div class="modal-content">
        @using (Html.BeginForm("AddMap", "Admin", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
            <div class="input-field col s12">
                @Html.DropDownListFor(m => m.viewModel.User_Login, new SelectList(Model.allUser), new { @class = "validate" })
                <label for="User_Login">Login</label>
            </div>

            <div class="input-field col s12">
                @Html.TextBoxFor(m => m.viewModel.Height, new { placeholder = "", @class = "validate" })
                <label for="Height">Wysokość</label>
            </div>

            <div class="input-field col s12">
                @Html.TextBoxFor(m => m.viewModel.Width, new { placeholder = "", @class = "validate" })
                <label for="Weight">Szerokość</label>
            </div>

            <input type="submit" value="Zapisz" class="btn waves-effect waves-light addButton" name="action" />
        }
    </div>
</div>

<div id="mapUpdate" class="modal">
    <div class="modal-content">
        @using (Html.BeginForm("UpdateMap", "Admin", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.HiddenFor(m => m.viewModel.ID, new { placeholder = "", @class = "validate inputID" })

            <div class="input-field col s12">
                @Html.TextBoxFor(m => m.viewModel.User_Login, new { placeholder = "", @class = "validate inputLogin" })
                <label for="Login">Login</label>
            </div>

            <div class="input-field col s12">
                @Html.TextBoxFor(m => m.viewModel.Height, new { placeholder = "", @class = "validate inputHeight" })
                <label for="Height">Wysokość</label>
            </div>

            <div class="input-field col s12">
                @Html.TextBoxFor(m => m.viewModel.Width, new { placeholder = "", @class = "validate inputWidth" })
                <label for="Weight">Szerokość</label>
            </div>

            <input type="submit" value="Zapisz" class="btn waves-effect waves-light addButton" name="action" />
        }
    </div>
</div>

<div class="tableList" id="mapsAdmin">
    <h4>Mapy</h4><input type="text" id="mapSearch" class="searchAdmin" placeholder="Login..." /><br />
    <button data-target="mapAdd" class="btn modal-trigger mapAdd">Dodaj mapę</button>
    <table class="highlight bordered responsive-table centered">
        <thead>
            <tr>
                <th>ID</th>
                <th>Login</th>
                <th>Szerokość</th>
                <th>Wysokość</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.listModel)
            {
                <tr>
                    <td>@item.ID</td>
                    <td class="search">@item.User_Login</td>
                    <td>@item.Width</td>
                    <td>@item.Height</td>
                    <td>
                        <div class="fixed-action-btn horizontal" style="position: relative; top: 5px; float: right">
                            <button class="btn-floating btn-large red">
                                <i class="fa fa-align-justify #00695c teal darken-5"></i>
                            </button>
                            <ul>
                                <li><button data-target="mapUpdate" class="btn-floating #00695c teal darken-3 modal-trigger mapUpdate" onclick="updaterow(['inputID','inputLogin','inputHeight','inputWidth'], ['@item.ID','@item.User_Login','@item.Height','@item.Width'])"><i class="fa fa-pencil"></i></button></li>
                                <li><button class="btn-floating #00695c teal darken-3" onclick="location.href='@Url.Action("DeleteMap", "Admin", new { id = item.ID })'"><i class="fa fa-trash-o"></i></button></li>
                            </ul>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>


<script src="~/Scripts/jquery-2.1.4.min.js"></script>
<script src="~/Scripts/js/jquery.slimscroll.min.js"></script>
<script src="~/Scripts/js/UpdateRow.js"></script>
<script>
    $('#mapsAdmin').slimScroll({
        size: '10px',
        height: '600px',
        alwaysVisible: true
    });
    $(document).ready(function () {
        // the "href" attribute of .modal-trigger must specify the modal ID that wants to be triggered
        $('.mapAdd').leanModal();
        $('.mapUpdate').leanModal();
    });
</script>
