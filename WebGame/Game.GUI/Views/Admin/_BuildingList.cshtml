                @Html.TextBoxFor(m => m.viewModel.Price, new { placeholder = "", @class = "validate" })
                <label for="Price">Cena</label>
            </div>

            <div class="input-field col s12">
                @Html.TextBoxFor(m => m.viewModel.Percent_price_per_lvl, new { placeholder = "", @class = "validate" })
                <label for="Percent_price_per_lvl">% ceny za lvl</label>
            </div>

            <div class="input-field col s12">
                @Html.TextBoxFor(m => m.viewModel.Width, new { placeholder = "", @class = "validate" })
                <label for="Width">Szerokość</label>
            </div>

            <div class="input-field col s12">
                @Html.TextBoxFor(m => m.viewModel.Height, new { placeholder = "", @class = "validate" })
                <label for="Height">Wysokość</label>
            </div>
            <div class="input-field col s12">
                @Html.TextBoxFor(m => m.viewModel.Product_per_sec, new { placeholder = "", @class = "validate" })
                <label for="Product_per_sec">Produkcja na sekundę</label>
            </div>

            <div class="input-field col s12">
                @Html.TextBoxFor(m => m.viewModel.DestPrice, new { placeholder = "", @class = "validate" })
                <label for="Dest_price">Koszt wyburzenia</label>
            </div>

            <div class="input-field col s12">
                @Html.TextBoxFor(m => m.viewModel.Percent_product_per_lvl, new { placeholder = "", @class = "validate" })
                <label for="Percent_product_per_lvl">% proukcji za lvl</label>
            </div>

            <div class="input-field col s12">
                @Html.TextBoxFor(m => m.viewModel.Product_Name, new { placeholder = "", @class = "validate" })
                <label for="Nazwa produktu">Nazwa produktu</label>
            </div>

            <div class="input-field col s12">
                @Html.TextBoxFor(m => m.viewModel.Alias, new { placeholder = "", @class = "validate" })
                <label for="Alias">Alias</label>
            </div>

            <div class="input-field col s12">
                @Html.TextBoxFor(m => m.viewModel.BuildingTime, new { placeholder = "", @class = "validate" })
                <label for="BuildingTime">Czas budowy [s]</label>
            </div>

            <div class="input-field col s12">
                @Html.TextBoxFor(m => m.viewModel.DestructionTime, new { placeholder = "", @class = "validate" })
                <label for="DestructionTime">Czas burzenia [s]</label>
            </div>

            <input type="submit" value="Zapisz" class="btn addButton" name="action" />

        }
    </div>
</div>

