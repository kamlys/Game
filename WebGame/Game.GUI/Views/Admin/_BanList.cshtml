@model List<Game.GUI.ViewModels.TableViewModel>
@{
    Layout = null;
}

<div id="banAdd" class="uk-modal">
    <div class="uk-modal-dialog">
        <a class="uk-modal-close uk-close"></a>
        <section class="uk-panel uk-panel-box uk-form">
            @using (Html.BeginForm("Add", "Admin", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.TextBox("User_ID", null, new { @class = "uk-width-1-1 uk-form-large" })
                @Html.TextArea("Description", null, new { @class = "uk-width-1-1 uk-form-large" })
                <input type="text" id="Start_Date" name="Start_Date" data-uk-datepicker="{format:'DD.MM.YYYY'}">
                <input type="text" id="Finish_Date" name="Finish_Date" data-uk-datepicker="{format:'DD.MM.YYYY'}">

                <input type="submit" value="Submit" />
            }
        </section>
    </div>
</div>


<div id="tableList">
    <table class="uk-table uk-table-hover uk-table-striped uk-table-condensed">
        <caption>Bany <button class="uk-button" data-uk-modal="{target:'#banAdd'}">Dodaj nowy</button></caption>
        <thead>
            <tr>
                <th>ID</th>
                <th>ID użytkownika</th>
                <th>Opis</th>
                <th>Początek</th>
                <th>Koniec</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.ID</td>
                    <td>@item.User_ID</td>
                    <td>@item.Description</td>
                    <td>@item.Start_Date</td>
                    <td>@item.Finish_Date</td>
                    <td class="uk-button-dropdown" data-uk-dropdown="{mode:'click'}">
                        <button class="uk-button" data-uk-dropdown="{mode:'click'}" aria-haspopup="true" aria-expanded="false">
                            Menu <span class="caret"></span>
                        </button>
                        <div class="uk-dropdown uk-dropdown-small">
                            <ul class="uk-nav uk-nav-dropdown">
                                <li><div class="button btn-build buildButton" onclick="update(@item.ID)">Edytuj</div></li>
                                <li><div class="button btn-build buildButton" onclick="delet(@item.ID)">Usuń</div></li>
                            </ul>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

