@model Game.GUI.ViewModels.ListTableViewModel
@{
    Layout = null;
}

<div id="queueAdd" class="modal">
    <div class="modal-content">
        @using (Html.BeginForm("Add", "BuildingQueue", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
            @Html.Label("ID użytkownika: ", new { @class = "uk-form-label" })
            @Html.TextBoxFor(m => m.tableView.User_ID, new { @class = "uk-width-1-1 uk-form-large" })
            @Html.Label("ID budynku: ", new { @class = "uk-form-label" })
            @Html.TextBoxFor(m => m.tableView.UserBuilding_ID, new { @class = "uk-width-1-1 uk-form-large" })
            @Html.Label("Data końca", new { @class = "uk-form-label" })
            <input type="text" data-uk-datepicker="{format:'DD.MM.YYYY'}" />
            @Html.Label("Nowy status: ", new { @class = "uk-form-label" })
            @Html.TextBoxFor(m => m.tableView.NewStatus, new { @class = "uk-width-1-1 uk-form-large" })

            <input type="submit" value="Zapisz" class="uk-button-large" />
        }
    </div>
</div>

<div class="tableList">
    <h4>Kolejka budowania</h4><br />
    <a class="waves-effect waves-light btn modal-trigger" href="#adminAdd">Dodaj budynek do kolejki</a>
    <table class="highlight bordered responsive-table centered">
        <thead>
            <tr>
                <th>ID</th>
                <th>ID użytkownika</th>
                <th>ID budynku użytkownika</th>
                <th>Czas końca budowy</th>
                <th>Nowy status</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.tableList)
            {
                <tr>
                    <td>@item.ID</td>
                    <td>@item.User_ID</td>
                    <td>@item.UserBuilding_ID</td>
                    <td>@item.Finish_Date</td>
                    <td>@item.NewStatus</td>
                    <td>
                        <div class="fixed-action-btn horizontal" style="position: relative; top: 5px; float: right">
                            <button class="btn-floating btn-large red">
                                <i class="fa fa-align-justify #00695c teal darken-5"></i>
                            </button>
                            <ul>
                                <li><button class="btn-floating #00695c teal darken-3"><i class="fa fa-pencil"></i></button></li>
                                <li><button class="btn-floating #00695c teal darken-3" onclick="location.href='@Url.Action("Delete", "BuildingQueue", new { id = item.ID })'"><i class="fa fa-trash-o"></i></button></li>
                            </ul>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
