@model Game.GUI.ViewModels.ListTableViewModel
@{
    Layout = null;
}

<div id="productAdd" class="modal">
    <div class="modal-content">
        @using (Html.BeginForm("Add", "Product", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {

            <div class="input-field col s12">
                @Html.TextBoxFor(m => m.tableView.Name, new { placeholder = "", @class = "validate" })
                <label for="Name">Nazwa produktu</label>
            </div>

            <div class="input-field col s12">
                @Html.TextBoxFor(m => m.tableView.Price_per_unit, new { placeholder = "", @class = "validate" })
                <label for="Price_per_unit">Cena za sztukę</label>
            </div>

            <div class="input-field col s12">
                @Html.TextBoxFor(m => m.tableView.Unit, new { placeholder = "", @class = "validate" })
                <label for="Unit">Jednostka</label>
            </div>

            <div class="input-field col s12">
                @Html.TextBoxFor(m => m.tableView.Alias, new { placeholder = "", @class = "validate" })
                <label for="Alias">Alias</label>
            </div>

            <input type="submit" value="Zapisz" class="btn waves-effect waves-light addButton" name="action" />

        }
    </div>
</div>


<div class="tableList">
    <h4>Produkty</h4><br />
    <button data-target="productAdd" class="btn modal-trigger productAdd">Dodaj produkt</button>
    <table class="highlight bordered responsive-table centered">
        <thead>
            <tr>
                <th>ID</th>
                <th>Nazwa</th>
                <th>Wartość jednostki</th>
                <th>Jednostka</th>
                <th>Alias</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.tableList)
            {
                <tr>
                    <td>@item.ID</td>
                    <td>@item.Name</td>
                    <td>@item.Price_per_unit</td>
                    <td>@item.Unit</td>
                    <td>@item.Alias</td>
                    <td>
                        <div class="fixed-action-btn horizontal" style="position: relative; top: 5px; float: right">
                            <button class="btn-floating btn-large red">
                                <i class="fa fa-align-justify #00695c teal darken-5"></i>
                            </button>
                            <ul>
                                <li><button class="btn-floating #00695c teal darken-3"><i class="fa fa-pencil"></i></button></li>
                                <li><button class="btn-floating #00695c teal darken-3" onclick="location.href='@Url.Action("Delete", "Product", new { id = item.ID })'"><i class="fa fa-trash-o"></i></button></li>
                            </ul>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<script src="~/Scripts/jquery-2.1.4.min.js"></script>
<script>
    $(document).ready(function () {
    // the "href" attribute of .modal-trigger must specify the modal ID that wants to be triggered
        $('.productAdd').leanModal();
});</script>
