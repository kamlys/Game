@model Game.GUI.ViewModels.ListTableViewModel
@{
    Layout = null;
}

<div id="adminAdd" class="modal">
    <div class="modal-content">
        @using (Html.BeginForm("Add", "Admin", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
            <div class="input-field col s12">
                @Html.TextBoxFor(m => m.tableView.Login, new { placeholder = "", @class = "validate" })
                <label for="Login">Login</label>
            </div>
            <input type="submit" value="Zapisz" class="btn waves-effect waves-light addButton" name="action" />
        }
    </div>
</div>

<div id="adminUpdate" class="modal">
    <div class="modal-content">
        @using (Html.BeginForm("Update", "Admin", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
            <div class="input-field col s12">
                @Html.TextBoxFor(m => m.tableView.ID, new { placeholder = "", @class = "validate inputID" })
                <label for="ID">ID</label>
            </div>
            <div class="input-field col s12">
                @Html.TextBoxFor(m => m.tableView.Login, new { @placeholder = "", @class = "validate inputLogin" })
                <label for="Login">Login</label>
            </div>
            <input type="submit" value="Zapisz" class="btn waves-effect waves-light addButton" name="action" />
        }
    </div>
</div>

<div class="tableList">
    <h4>Admini</h4><br />
    <button data-target="adminAdd" class="btn modal-trigger adminAdd">Dodaj admina</button>
    <table class="highlight bordered responsive-table centered">
        <thead>
            <tr>
                <th data-field="id">ID</th>
                <th data-field="login">Login</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.tableList)
            {
                <tr>

                    <td>@item.ID</td>
                    <td>@item.Login</td>
                    <td>
                        <div class="fixed-action-btn horizontal" style="position: relative; top: 5px; float: right">
                            <button class="btn-floating btn-large">
                                <i class="fa fa-align-justify #00695c teal darken-5"></i>
                            </button>
                            <ul>
                                <li><button data-target="adminUpdate" class="btn-floating #00695c teal darken-3 modal-trigger adminUpdate" onclick="updaterow(['inputID','inputLogin'], ['@item.ID','@item.Login'])"><i class="fa fa-pencil"></i></button></li>
                                <li><button class="btn-floating #00695c teal darken-3" onclick="location.href='@Url.Action("Delete", "Admin", new { id = item.ID })'"><i class="fa fa-trash-o"></i></button></li>
                            </ul>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<script src="~/Scripts/jquery-2.1.4.min.js"></script>
<script src="~/Scripts/js/UpdateRow.js"></script>
<script>
    $(document).ready(function () {
        $('.adminAdd').leanModal();
        $('.adminUpdate').leanModal();


    });
</script>
