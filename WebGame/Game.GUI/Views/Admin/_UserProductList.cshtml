@model Game.GUI.ViewModels.ListTableViewModel
@{
    Layout = null;
}

<div id="uproductAdd" class="modal">
    <div class="modal-content">
        @using (Html.BeginForm("Add", "UserProduct", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
            @Html.Label("ID użytkownika: ", new { @class = "uk-form-label" })
            @Html.TextBoxFor(m => m.tableView.User_ID, null, new { @class = "uk-width-1-1 uk-form-large" })
            @Html.Label("Nazwa: ", new { @class = "uk-form-label" })
            @Html.TextBoxFor(m => m.tableView.Name, null, new { @class = "uk-width-1-1 uk-form-large" })
            @Html.Label("Wartość: ", new { @class = "uk-form-label" })
            @Html.TextBoxFor(m => m.tableView.Value, null, new { @class = "uk-width-1-1 uk-form-large" })
            @Html.Label("ID produktu: ", new { @class = "uk-form-label" })
            @Html.TextBoxFor(m => m.tableView.Product_ID, null, new { @class = "uk-width-1-1 uk-form-large" })

            <input type="submit" value="Zapisz" class="uk-button-large" />
        }
    </div>
</div>

<div class="tableList">
    <h4>Produkty użytkownika</h4><br />
    <a class="waves-effect waves-light btn modal-trigger" href="#adminAdd">Dodaj produkt użytkownikowi</a>
    <table class="highlight bordered responsive-table centered">
        <thead>
            <tr>
                <th>ID</th>
                <th>Login</th>
                <th>Nazwa produktu</th>
                <th>Ilość</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.tableList)
            {
                <tr>
                    <td>@item.ID</td>
                    <td>@item.Login</td>
                    <td>@item.Name</td>
                    <td>@item.Value</td>
                    <td>
                        <div class="fixed-action-btn horizontal" style="position: relative; top: 5px; float: right">
                            <button class="btn-floating btn-large red">
                                <i class="fa fa-align-justify #00695c teal darken-5"></i>
                            </button>
                            <ul>
                                <li><button class="btn-floating #00695c teal darken-3"><i class="fa fa-pencil"></i></button></li>
                                <li><button class="btn-floating #00695c teal darken-3" onclick="location.href='@Url.Action("Delete", "UserProuct", new { id = item.ID })'"><i class="fa fa-trash-o"></i></button></li>
                            </ul>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

