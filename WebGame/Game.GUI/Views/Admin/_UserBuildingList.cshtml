@model Game.GUI.ViewModels.ListTableViewModel
@{
    Layout = null;
}

<div id="ubuildingAdd" class="uk-modal">
    <div class="uk-modal-dialog">
        <a class="uk-modal-close uk-close"></a>
        <section class="uk-panel uk-panel-box uk-form">
            @using (Html.BeginForm("Add", "UserProduct", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.Label("ID użytkownika: ", new { @class = "uk-form-label" })
                @Html.TextBoxFor(m => m.tableView.User_ID, null, new { @class = "uk-width-1-1 uk-form-large" })
                @Html.Label("Pozycja X: ", new { @class = "uk-form-label" })
                @Html.TextBoxFor(m => m.tableView.X_pos, null, new { @class = "uk-width-1-1 uk-form-large" })
                @Html.Label("Pozyja Y: ", new { @class = "uk-form-label" })
                @Html.TextBoxFor(m => m.tableView.Y_pos, null, new { @class = "uk-width-1-1 uk-form-large" })
                @Html.Label("Lvl: ", new { @class = "uk-form-label" })
                @Html.TextBoxFor(m => m.tableView.Lvl, null, new { @class = "uk-width-1-1 uk-form-large" })
                @Html.Label("ID bydynku: ", new { @class = "uk-form-label" })
                @Html.TextBoxFor(m => m.tableView.Building_ID, null, new { @class = "uk-width-1-1 uk-form-large" })
                @Html.Label("Statu: ", new { @class = "uk-form-label" })
                @Html.TextBoxFor(m => m.tableView.Status, null, new { @class = "uk-width-1-1 uk-form-large" })

                <input type="submit" value="Zapisz" class="uk-button-large" />
            }
        </section>
    </div>
</div>

<div id="tableList">
    <table class="uk-table uk-table-hover uk-table-striped uk-table-condensed">
        <caption>Budynki użytkownika<button class="uk-button" data-uk-modal="{target:'#ubuildingAdd'}">Dodaj nowy</button></caption>
        <thead>
            <tr>
                <th>ID</th>
                <th>ID użytkownika</th>
                <th>Pozycja X</th>
                <th>Pozycja Y</th>
                <th>Level</th>
                <th>ID Budynku</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.tableList)
            {
                <tr>
                    <td>@item.ID</td>
                    <td>@item.User_ID</td>
                    <td>@item.X_pos</td>
                    <td>@item.Y_pos</td>
                    <td>@item.Lvl</td>
                    <td>@item.Building_ID</td>
                    <td>@item.Status</td>
                    <td class="uk-button-dropdown" data-uk-dropdown="{mode:'click'}">
                        <button class="uk-button" data-uk-dropdown="{mode:'click'}" aria-haspopup="true" aria-expanded="false">
                            Menu <span class="caret"></span>
                        </button>
                        <div class="uk-dropdown uk-dropdown-small">
                            <ul class="uk-nav uk-nav-dropdown">
                                <li><div class="button btn-build buildButton" onclick="update(@item.ID)">Edytuj</div></li>
                                <li><div class="button btn-build buildButton" onclick="location.href='@Url.Action("Delete","UserBuilding", new { id = item.ID })'">Usuń</div></li>

                            </ul>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>