@model List<Game.GUI.ViewModels.TableViewModel>
@{
    Layout = null;
}

<div id="buildingAdd" class="uk-modal">
    <div class="uk-modal-dialog">
        <a class="uk-modal-close uk-close"></a>
        <section class="uk-panel uk-panel-box uk-form">
            @using (Html.BeginForm("Add", "Building", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.TextBox("Name", null, new {@placeholder="Nazwa", @class = "uk-width-1-1 uk-form-large" })
                @Html.TextBox("Price", null, new { @placeholder = "Cena", @class = "uk-width-1-1 uk-form-large" })
                @Html.TextBox("Height", null, new { @placeholder = "Wysokość", @class = "uk-width-1-1 uk-form-large" })
                @Html.TextBox("Width", null, new { @placeholder = "Szerokość", @class = "uk-width-1-1 uk-form-large" })
                @Html.TextBox("Dest_Price", null, new { @placeholder = "Cena zniszczenia", @class = "uk-width-1-1 uk-form-large" })
                @Html.TextBox("Percent_price_per", null, new { @placeholder = "% ceny za lvl", @class = "uk-width-1-1 uk-form-large" })
                @Html.TextBox("Percent_product_per_lvl", null, new { @placeholder = "% produktu za lvl", @class = "uk-width-1-1 uk-form-large" })
                @Html.TextBox("Product_ID", null, new { @placeholder = "ID produktu", @class = "uk-width-1-1 uk-form-large" })
                @Html.TextBox("Product_per_sec", null, new { @placeholder = "Produkcja na sekundę", @class = "uk-width-1-1 uk-form-large" })
                @Html.TextBox("Alias", null, new { @placeholder = "Alias", @class = "uk-width-1-1 uk-form-large" })
                @Html.TextBox("BuildingTime", null, new { @placeholder = "Czas budowy (sec)", @class = "uk-width-1-1 uk-form-large" })
                @Html.TextBox("DestructionTime", null, new { @placeholder = "Czas burzenia (sec)", @class = "uk-width-1-1 uk-form-large" })

                <input type="submit" value="Zapis" class="uk-button-large" />
            }
        </section>
    </div>
</div>


<div id="tableList">
    <table class="uk-table uk-table-hover uk-table-striped uk-table-condensed">
        <caption>Budynki <button class="uk-button" data-uk-modal="{target:'#buildingAdd'}">Dodaj nowy</button></caption>
        <thead>
            <tr>
                <th>ID</th>
                <th>Nazwa</th>
                <th>Cena</th>
                <th>Cena za level</th>
                <th>Szerokość</th>
                <th>Wysokość</th>
                <th>Produkcja/s</th>
                <th>Cena wyburzenia</th>
                <th>Produkcja co level</th>
                <th>ID Produktu</th>
                <th>Alias</th>
                <th>Czas budowy</th>
                <th>Czas wyburzenia</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.ID</td>
                    <td>@item.Name</td>
                    <td>@item.Price</td>
                    <td>@item.Percent_price_per_lvl</td>
                    <td>@item.Width</td>
                    <td>@item.Height</td>
                    <td>@item.Product_per_sec</td>
                    <td>@item.Dest_price</td>
                    <td>@item.Percent_product_per_lvl</td>
                    <td>@item.Product_ID</td>
                    <td>@item.Alias</td>
                    <td>@item.BuildingTime</td>
                    <td>@item.Dest_price</td>
                    <td class="uk-button-dropdown" data-uk-dropdown="{mode:'click'}">
                        <button class="uk-button" data-uk-dropdown="{mode:'click'}" aria-haspopup="true" aria-expanded="false">
                            Menu <span class="caret"></span>
                        </button>
                        <div class="uk-dropdown uk-dropdown-small">
                            <ul class="uk-nav uk-nav-dropdown">
                                <li><div class="button btn-build buildButton" onclick="update(@item.ID)">Edytuj</div></li>
                                <li><div class="button btn-build buildButton" onclick="delet(@item.ID)">Usuń</div></li>
                            </ul>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

