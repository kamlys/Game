@model Game.GUI.RouteConfig
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (User.Identity.IsAuthenticated)
{
    <div class="row">
        <div class="col-md-2">
            <div>Buduj:</div>
            @Html.Action("_BuildingsList", "Building")
        </div>
        <div class="col-md-8">
            @Html.Action("_UserMap", "Map")
        </div>
        <div class="col-md-2">
            <div>Moje budynki:</div>
            @Html.Action("_UserBuildingsList", "Building")
        </div>
    </div>

}
