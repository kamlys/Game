@model PagedList.IPagedList<Game.GUI.ViewModels.TableViewModel>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Ranking";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int temp = 1;
}

<div class="Ranking">
    <div class="paginationRank">
        @Html.PagedListPager(Model, Page_No => Url.Action("Index", new { Page_No }))
    </div>
    <table class="bordered centered">
        <thead>
            <tr>
                <th>No.</th>
                <th>Użytkownik</th>
                <th>Kwota</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                if (item.Login == User.Identity.Name)
                {
                    <tr onclick="location.href='@Url.Action("Profil", "User", new { User = @item.Login })'" style="font-weight: bold; font-size: 19px">
                        <td>@Html.DisplayFor(modelItem => item.Number)</td>
                        <td>@Html.DisplayFor(modelItem=>item.Login)</td>
                        <td>@Html.DisplayFor(modelItem => item.Value)</td>
                    </tr>
                }
                else
                {
                    <tr onclick="location.href='@Url.Action("Profil", "User", new { User = @item.Login })'">
                        <td>@Html.DisplayFor(modelItem => item.Number)</td>
                        <td>@Html.DisplayFor(modelItem => item.Login)</td>
                        <td>@Html.DisplayFor(modelItem => item.Value)</td>
                    </tr>
                }
            }
        </tbody>
    </table>
    
</div>
